ition: 0px;\n    background-size: cover;\n    background-repeat: no-repeat;\n    bgc\n    width: 700px;\n    height: 400px;\n}\n.img-enter-active,.img-leave-active {\n    transition: all 4s;\n}\n.img-enter,.img-leave-to {\n    opacity: 0;\n}\n.img-enter-to,.img-leave {\n    opacity: 1;\n}\n</style>"]},"metadata":{},"sourceType":"module"}