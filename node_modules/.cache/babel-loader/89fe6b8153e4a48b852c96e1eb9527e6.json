{"ast":null,"code":"export default {\n  methods: {\n    jump(index) {\n      var items = document.querySelectorAll(\".scroll-item\");\n\n      for (var i = 0; i < items.length; i++) {\n        if (index === i) {\n          items[i].scrollIntoView({\n            block: \"start\",\n            //默认跳转到顶部\n            behavior: \"smooth\" //滚动的速度\n\n          });\n        }\n      }\n    },\n\n    onScroll(e) {\n      let scrollItems = document.querySelectorAll(\".scroll-item\");\n\n      for (let i = scrollItems.length - 1; i >= 0; i--) {\n        // 判断滚动条滚动距离是否大于当前滚动项可滚动距离\n        let judge = e.target.scrollTop >= scrollItems[i].offsetTop - scrollItems[0].offsetTop;\n\n        if (judge) {\n          this.activeStep = i;\n          break;\n        }\n      }\n    }\n\n  },\n\n  data() {\n    return {\n      activeStep: 0,\n      title_list: [{\n        title: '第一'\n      }, {\n        title: '第二'\n      }, {\n        title: '第三'\n      }, {\n        title: '第四'\n      }]\n    };\n  }\n\n};","map":{"version":3,"mappings":"AAsBA;EACAA;IACAC;MACA;;MACA;QACA;UACAC;YACAC,cADA;YACA;YACAC,kBAFA,CAEA;;UAFA;QAIA;MACA;IACA,CAXA;;IAYAC;MACA;;MACA;QACA;QACA,YACAC,sBACAC,mDAFA;;QAGA;UACA;UACA;QACA;MACA;IACA;;EAxBA,CADA;;EA2BAC;IACA;MACAC,aADA;MAEAC,aACA;QAAAC;MAAA,CADA,EAEA;QAAAA;MAAA,CAFA,EAGA;QAAAA;MAAA,CAHA,EAIA;QAAAA;MAAA,CAJA;IAFA;EASA;;AArCA","names":["methods","jump","items","block","behavior","onScroll","e","scrollItems","data","activeStep","title_list","title"],"sourceRoot":"src/components","sources":["Test.vue"],"sourcesContent":["<template>\n    <div>\n        <!-- <div class=\"list\">\n        <ul>\n            <li v-for=\"(item,index) in title_list\" :key=\"index\">\n            <span ref=\"spans\" :style=\"{color: activeStep === index ? '#1987e1' : '#000000'}\"\n            @click=\"jump(index)\">\n            {{item.title}}\n            </span>\n            </li>\n        </ul>\n        </div>\n        <div class=\"result\" @scroll=\"onScroll\" >\n        <div class=\"scroll-item\"><span>1</span></div>\n        <div class=\"scroll-item\"><span>2</span></div>\n        <div class=\"scroll-item\"><span>3</span></div>\n        <div class=\"scroll-item\"><span>4</span></div>\n        </div> -->\n    </div>\n</template>\n\n<script>\nexport default {\n  methods:{\n    jump(index) {\n      var items = document.querySelectorAll(\".scroll-item\");\n      for (var i = 0; i < items.length; i++) {\n        if (index === i) {\n          items[i].scrollIntoView({\n            block: \"start\",//默认跳转到顶部\n            behavior: \"smooth\"//滚动的速度\n          });\n        }\n      }\n    },\n    onScroll(e) {\n      let scrollItems = document.querySelectorAll(\".scroll-item\");\n      for (let i = scrollItems.length - 1; i >= 0; i--) {\n        // 判断滚动条滚动距离是否大于当前滚动项可滚动距离\n        let judge =\n          e.target.scrollTop >=\n          scrollItems[i].offsetTop - scrollItems[0].offsetTop;\n        if (judge) {\n          this.activeStep = i;\n          break;\n        }\n      }\n    },    \n  },\n  data() {\n    return {\n      activeStep :0,\n      title_list:[\n        {title:'第一'},\n        {title:'第二'},        \n        {title:'第三'},\n        {title:'第四'},\n        ]\n    }\n  }\n}\n</script>\n\n<style scoped>\n.list {\n  width: 100%;\n  height: 40px;\n  margin-bottom: 20px;\n  background: pink;\n\n  opacity: 0.7;\n  position: fixed;\n}\nul {\n  width: 100%;\n  height: 40px;\n  line-height: 40px;\n  list-style: none;\n}\nli {\n  float: left;\n  width: 20%;\n  font-size: 30px;\n}\nli>span {\n  cursor:pointer;\n}\n.result {\n  width: 100%;\n  height: 500px;\n  overflow: scroll;\n}\n.scroll-item {\n  width: 100%;\n  height: 500px;\n  margin-top:20px;\n  background: yellow;\n}\n.scroll-item>span {\n  font-size: 40px;\n}\n.scroll-item:first-child {\n  margin-top: 0;\n}\n.scroll-item:last-child {\n  height: 500px;\n}\n</style>\n\n"]},"metadata":{},"sourceType":"module"}