ethods: {\n        autoPlay(){\n            this.curIndex = (this.curIndex < this.images.length - 1) ? this.curIndex + 1 : 0\n        },\n        play(){\n            setInterval(this.autoPlay, 4000);\n        }\n        // play() {\n        //     setInterval(this.autoPlay, 6000)\n        // }\n    }\n}\n</script>\n\n<style>\n.login_img{\n    margin-top: -50px;\n    width: 100%;\n    height: 500px;\n\n}\n.img{\n    display: block;\n    width: 100%;\n    height: 100px;\n    background-color: cyan;\n}\n.login_img ul li  {\n    /* position: absolute; */\n}\n.login_img .divImg {\n    position: relative;\n    background-position: 0px;\n    background-size: cover;\n    background-repeat: no-repeat;\n    background-position: center center;\n    width: 100%;\n    height: 700px;\n}\n.img-item{\n    width: 100% !important;\n}\n.img-enter-active {\n/* .img-leave-active { */\n    transition: all 3s ease;\n}\n.img-enter,.img-leave-to {\n    opacity: 0;\n}\n.img-enter-to,.img-leave {\n    z-index: 100;\n    opacity: 1;\n}\n</style>"]},"metadata":{},"sourceType":"module"}